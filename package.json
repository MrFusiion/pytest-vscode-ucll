{
  "name": "pytest-vscode-ucll",
  "displayName": "pytest-vscode-ucll",
  "description": "Run pytest for programming-2",
  "version": "0.0.11",
  "icon": "images/logo.png",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:pytest.ini"
  ],
  "contributes": {
    "configuration": [
      {
        "id": "pytest-vscode-ucll",
        "title": "UCLL Programming 2 PyTest",
        "order": 0,
        "properties": {
          "vscode.pytest.ucll.autoOpenAssignments": {
            "type": "boolean",
            "default": true,
            "description": "Automatically open assignments when opening a student.py file."
          },
          "vscode.pytest.ucll.showOnlyResultSummary": {
            "type": "boolean",
            "default": false,
            "description": "Show only the test result summary in the test output window."
          },
          "vscode.pytest.ucll.totalTestWorkers": {
            "type": "number",
            "default": 1,
            "minimum": 1,
            "description": "Number of test workers to run in parallel."
          }
        }
      }
    ]
  },
  "main": "./dist/extension.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/MrFusiion/pytest-vscode-ucll.git"
  },
  "publisher": "MrFusiion",
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "webpack": "webpack --mode development",
    "webpack-dev": "webpack --mode development --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "test-compile": "tsc -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/ini": "^1.3.31",
    "@types/markdown-it": "^12.2.3",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.75.0",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "@vscode/test-electron": "^2.3.0",
    "eslint": "^8.34.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.5",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  },
  "dependencies": {
    "highlight.js": "^11.7.0",
    "ini": "^3.0.1",
    "markdown-it": "^13.0.1",
    "os": "^0.1.2",
    "path": "^0.12.7",
    "util": "^0.12.5"
  },
  "license": "MIT"
}
